@using ControleDeBar.Dominio.ModuloConta
@{
    List<Conta> contas = ViewBag.Contas;

    Layout = "_Layout";
    ViewBag.Title = "Listagem de Contas";
}

<div class="mt-3">
    <a class="btn btn-primary px-5" href="/conta/inserir">
        <i class="bi bi-plus-circle me-1 align-items-center"></i>
        Inserir Nova Conta
    </a>
</div>

<div class="row mt-3 gap-3 p-2">
    @foreach (var conta in contas)
    {
        <div class="card col-md-5 col-lg-4 col-xl-3">
            <div class="card-body">
                <div class="row row-cols-2">
                    <label class="card-title fs-5 fw-semibold">@conta.ToString()</label>

                    <div class="text-end">
                        <a class="btn btn-secondary btn-sm" href="/conta/detalhes/@conta.Id">
                            <i class="bi bi-search"></i>
                        </a>

                        <a class="btn btn-primary btn-sm" href="/conta/editar/@conta.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a class="btn btn-danger btn-sm" href="/conta/excluir/@conta.Id">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </div>

                <p class="card-subtitle fs-6 text-body-secondary"><strong>Id:</strong> @conta.Id</p>
                <p class="card-subtitle fs-6 text-body-secondary"><strong>Titular:</strong> @conta.Titular</p>
                <p class="card-subtitle fs-6 text-body-secondary"><strong>Mesa:</strong> @conta.Mesa</p>
                <p class="card-subtitle fs-6 text-body-secondary"><strong>Garçom:</strong> @conta.Garcom</p>
                <p class="card-subtitle fs-6 text-body-secondary"><strong>Abertura:</strong> @conta.Abertura</p>
                <p class="card-subtitle fs-6 text-body-secondary"><strong>Fechamento:</strong> @conta.Fechamento</p>
                <p class="card-subtitle fs-6 text-body-secondary"><strong>Esta aberta:</strong> @conta.EstaAberta</p>
                <p class="card-subtitle fs-6 text-body-secondary"><strong>Pedidos:</strong> @conta.Pedidos</p>

            </div>

        </div>
    }
</div>
