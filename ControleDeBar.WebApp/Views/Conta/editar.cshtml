@{
    var conta = ViewBag.Conta;

    Layout = "_Layout";
    ViewBag.Title = "Edição de Conta";
}

<div class="row mt-3">
    <div class="col-lg-6">
        <form class="d-grid gap-4" action="/conta/editar/@conta.Id" method="post">

            <div class="mt-2">
                <label class="control-label fw-semibold">Titular da Conta:</label>
                <input class="form-control" type="text" name="Titular" value="@conta.Titular" />
            </div>

            <div class="form-check mt-2">
                <input disabled class="form-check-input" @conta.Mesa name="Mesa" type="checkbox" value="true">
                <label class="form-check-label fw-semibold" for="Mesa">
                    Mesa
                </label>
            </div>


            <div class="mt-2 d-grid gap-2 d-md-block">
                <button class="btn btn-primary px-5">
                    <i class="bi bi-floppy-fill me-1"></i>
                    Gravar
                </button>

                <a class="btn btn-secondary px-5" href="/conta/listar">
                    <i class="bi bi-arrow-return-left me-1"></i>
                    Voltar
                </a>
            </div>

        </form>

    </div>
</div>