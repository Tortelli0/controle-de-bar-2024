@{
    var mesa = ViewBag.Mesa;
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
    <title>Edição de Mesa - Controle de Bar</title>
    </head>
    <body>
        <h1>Edição de Mesa</h1>

        <form action="/mesa/editar/@mesa.Id" method="post">

            <label>Número da Mesa: </label> <br />
            <input name="numero" value="@mesa.Numero" />

            <input name="ocupada" type="checkbox" @(mesa.Ocupada ? "checked" : "") />

            <button>Gravar</button>

        </form>

        <a href="/mesa/listar">Listar Mesas</a>
    </body>
</html>