@{
    var mesa = ViewBag.Mesa;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Exclusão de Mesa</title>
</head>
<body>
    <h1>Exclusão de Mesa</h1>

    <p>Tem certeza que deseja excluir a mesa @mesa.Numero?</p>

    <form action="/mesa/excluir/@mesa.Id" method="post">

        <button>Excluir</button>

    </form>

    <a href="/mesa/listar">Listar Mesas</a>
</body>
</html>