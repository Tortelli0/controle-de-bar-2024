@{
    var garcom = ViewBag.Garcom;
    Layout = "_Layout";
    ViewBag.Title = "Exclusão de Garçom";
}

<div class="row mt-3">
    <div class="col-lg-6 d-grid gap-2">
        <label class="fs-5"><strong>Garçom:</strong> @garcom.Nome</label>

        <label><strong>Id:</strong> [@garcom.Id]</label>
        <label><strong>Nome:</strong> [@garcom.Nome]</label>
        <label><strong>Cpf:</strong> [@garcom.Cpf]</label>

        <p class="text-bg-danger p-3 rounded fs-5 mt-2">
            Deseja realmente confirmar a exclusão? Não será possível recuperar os dados excluídos posteriormente.
        </p>

        <form class="mt-2 d-grid gap-2 d-md-block" action="/garcom/excluir/@garcom.Id" method="post">
            <button class="btn btn-danger px-5">
                <i class="bi bi-trash-fill me-1"></i>
                Excluir
            </button>

            <a class="btn btn-secondary px-5" href="/garcom/listar">
                <i class="bi bi-arrow-return-left me-1"></i>
                Voltar
            </a>

        </form>
    </div>
</div>